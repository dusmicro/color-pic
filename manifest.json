
{
  "manifest_version": 3,
  "name": "Simple Color Picker",
  "version": "1.0",
  "description": "Pick colors from webpages with eyedropper tool",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
